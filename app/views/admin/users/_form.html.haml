= form_with model: [:admin, user], local: true do |f|
  - if user.errors.any?
    .alert.alert-danger.py-2
      %ul.mb-0
        - user.errors.full_messages.each do |msg|
          %li= msg

  .mb-3
    = f.label :callsign, "Callsign", class: "form-label text-secondary small"
    = f.text_field :callsign, class: "form-control bg-dark text-light border-secondary", autocapitalize: "characters"

  .mb-3
    = f.label :name, "Name", class: "form-label text-secondary small"
    = f.text_field :name, class: "form-control bg-dark text-light border-secondary"

  .mb-3
    = f.label :email, "Email", class: "form-label text-secondary small"
    = f.email_field :email, class: "form-control bg-dark text-light border-secondary"

  .mb-3
    = f.label :mobile, "Mobile", class: "form-label text-secondary small"
    = f.telephone_field :mobile, class: "form-control bg-dark text-light border-secondary"

  .mb-3
    = f.label :telegram, "Telegram", class: "form-label text-secondary small"
    = f.text_field :telegram, class: "form-control bg-dark text-light border-secondary", placeholder: "@handle"

  .mb-3
    = f.label :password, "Password#{' (leave blank to keep current)' if user.persisted?}", class: "form-label text-secondary small"
    = f.password_field :password, class: "form-control bg-dark text-light border-secondary"

  .mb-3
    = f.label :password_confirmation, "Confirm password", class: "form-label text-secondary small"
    = f.password_field :password_confirmation, class: "form-control bg-dark text-light border-secondary"

  .mb-3
    = f.label :role, "Role", class: "form-label text-secondary small"
    = f.select :role, [["User", "user"], ["Admin", "admin"]], {}, class: "form-select bg-dark text-light border-secondary"

  = f.submit (user.persisted? ? "Update User" : "Create User"), class: "btn btn-primary"
  = link_to "Cancel", admin_users_path, class: "btn btn-outline-secondary ms-2"
