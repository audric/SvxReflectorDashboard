!!!
%html{lang: "en", "data-bs-theme" => "dark"}
  %head
    %meta{charset: "UTF-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title SVXReflector Â· Login
    %link{rel: "stylesheet", href: "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"}
    %link{rel: "stylesheet", href: "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"}
    :css
      body { background: #0d1117; }

  %body
    = render 'shared/navbar', active: 'login'

    .container
      .row.justify-content-center
        .col-md-5.col-lg-4
          .card.bg-dark.border-secondary
            .card-header.bg-dark.border-secondary.text-center
              %h5.mb-0
                %i.bi.bi-key.me-2
                Login
            .card-body
              - if flash[:alert]
                .alert.alert-danger.py-2= flash[:alert]

              = form_with url: login_path, method: :post, local: true do |f|
                .mb-3
                  = f.label :callsign, "Callsign", class: "form-label text-secondary small"
                  = f.text_field :callsign, class: "form-control bg-dark text-light border-secondary", autofocus: true, autocapitalize: "characters"
                .mb-3
                  = f.label :password, "Password", class: "form-label text-secondary small"
                  = f.password_field :password, class: "form-control bg-dark text-light border-secondary"
                = f.submit "Login", class: "btn btn-primary w-100"

    %script{src: "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"}
